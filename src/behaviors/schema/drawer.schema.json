{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Drawer Overlay",
  "description": "Button-triggered slide-out panel overlay",
  "behavior": "drawer",
  
  "semantic": {
    "element": {
      "description": "Trigger element - button that opens the drawer"
    },
    "generated": {
      "drawer": {
        "tag": "DIV",
        "description": "Fixed position overlay panel"
      },
      "backdrop": {
        "tag": "DIV",
        "description": "Dimmed background overlay"
      }
    }
  },
  
  "properties": {
    "title": {
      "type": "string",
      "description": "Drawer title displayed in header",
      "default": "Drawer"
    },
    "content": {
      "type": "string",
      "description": "Drawer body content (HTML allowed)",
      "default": "Drawer content"
    },
    "position": {
      "type": "string",
      "description": "Side to slide in from",
      "enum": ["left", "right"],
      "default": "right"
    },
    "width": {
      "type": "string",
      "description": "Width of the drawer panel",
      "default": "320px"
    }
  },
  
  "compliance": {
    "baseClass": "wb-drawer-trigger",
    "triggerClass": "wb-drawer-trigger"
  },
  
  "test": {
    "setup": [
      "<button data-wb=\"drawer\" data-drawer-title=\"Test Drawer\">Open</button>"
    ],
    "matrix": {
      "combinations": [
        { "position": "right" },
        { "position": "left" }
      ]
    }
  }
}

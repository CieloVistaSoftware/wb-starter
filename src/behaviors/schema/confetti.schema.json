{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "behavior": "confetti",
  "properties": {
    "count": {
      "type": "number",
      "title": "Particle Count",
      "default": 50,
      "description": "Number of confetti particles"
    },
    "label": {
      "type": "string",
      "title": "Button Label",
      "default": "Fire Confetti!",
      "description": "Text to show on the button"
    },
    "showButtons": {
      "type": "boolean",
      "title": "Show Button",
      "default": true,
      "description": "Whether to render a trigger button"
    },
    "repeat": {
      "type": "boolean",
      "title": "Repeat Animation",
      "default": false,
      "description": "Loop the animation indefinitely"
    },
    "delay": {
      "type": "string",
      "title": "Delay",
      "default": "0s",
      "description": "Delay before starting (e.g. 1s, 500ms)"
    },
    "duration": {
      "type": "string",
      "title": "Duration",
      "default": "3s",
      "description": "Length of the animation cycle"
    }
  },
  "compliance": {
    "baseClass": "wb-confetti-trigger"
  },
  "test": {
    "setup": ["<button data-wb=\"confetti\">Confetti</button>"]
  }
}
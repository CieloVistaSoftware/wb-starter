{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Card Horizontal",
  "description": "Horizontal layout card. INHERITS from card.base (IS-A card), CONTAINS horizontal layout (HAS-A side image).",
  "behavior": "cardhorizontal",
  
  "$extends": "card.base.schema.json",
  "$inheritance": {
    "type": "IS-A",
    "parent": "card",
    "inherits": ["semantic.element", "semantic.structure.main", "compliance.containerTag", "accessibility"]
  },
  
  "$containment": [
    {
      "type": "HAS-A",
      "name": "sideImage",
      "element": "FIGURE > IMG",
      "description": "Side image in horizontal layout"
    }
  ],
  
  "properties": {
    "$inherited": ["title", "subtitle", "hoverable", "elevated"],
    
    "image": {
      "type": "string",
      "description": "Image URL",
      "containedIn": "figure"
    },
    "imagePosition": {
      "type": "string",
      "description": "Image position",
      "enum": ["left", "right"],
      "default": "left"
    },
    "imageWidth": {
      "type": "string",
      "description": "Image width percentage",
      "default": "40%"
    }
  },
  
  "compliance": {
    "baseClass": "wb-card",
    "parentClass": "wb-card--horizontal",
    "requiredChildren": {},
    "optionalChildren": {
      ".wb-card__horizontal-content": {
        "description": "Horizontal content container with title/subtitle/body"
      },
      ".wb-card__figure": {
        "description": "Side image figure",
        "tagName": "FIGURE"
      }
    },
    "styles": {
      "flexDirection": {"required": false}
    }
  },
  
  "test": {
    "setup": [
      "<article data-wb=\"cardhorizontal\" data-image=\"image.jpg\" data-title=\"Title\"></article>",
      "<article data-wb=\"cardhorizontal\" data-image=\"image.jpg\" data-title=\"Title\" data-image-position=\"right\"></article>"
    ],
    "matrix": {
      "combinations": [
        { "image": "test.jpg", "title": "Title" },
        { "image": "test.jpg", "title": "Title", "imagePosition": "right" },
        { "image": "test.jpg", "title": "Title", "imageWidth": "50%" }
      ]
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Card Button",
  "description": "Card with action buttons. INHERITS from card.base (IS-A card), CONTAINS button group.",
  "behavior": "cardbutton",
  
  "$extends": "card.base.schema.json",
  
  "properties": {
    "title": {
      "type": "string",
      "description": "Card title",
      "default": "Card with Actions"
    },
    "content": {
      "type": "string",
      "description": "Card content/description"
    },
    "primary": {
      "type": "string",
      "description": "Primary button text",
      "required": true,
      "default": "Confirm"
    },
    "primaryHref": {
      "type": "string",
      "description": "Primary button link (makes it an A tag)"
    },
    "secondary": {
      "type": "string",
      "description": "Secondary button text"
    },
    "secondaryHref": {
      "type": "string",
      "description": "Secondary button link (makes it an A tag)"
    }
  },
  
  "compliance": {
    "baseClass": "wb-card",
    "requiredChildren": {},
    "optionalChildren": {
      "header.wb-card__header": {
        "description": "Header with title",
        "tagName": "HEADER",
        "createdWhen": "title is set"
      },
      "main.wb-card__main": {
        "description": "Main content",
        "tagName": "MAIN",
        "createdWhen": "content is set"
      },
      "footer.wb-card__footer": {
        "description": "Footer with button group",
        "tagName": "FOOTER",
        "createdWhen": "primary is set"
      },
      ".wb-card__btn--primary": {
        "description": "Primary button",
        "tagName": ["BUTTON", "A"]
      },
      ".wb-card__btn--secondary": {
        "description": "Secondary button",
        "tagName": ["BUTTON", "A"],
        "createdWhen": "secondary is set"
      }
    }
  },
  
  "events": {
    "wb:cardbutton:primary": {
      "bubbles": true,
      "detail": { "text": "string" }
    },
    "wb:cardbutton:secondary": {
      "bubbles": true,
      "detail": { "text": "string" }
    }
  },
  
  "test": {
    "setup": [
      "<article data-wb=\"cardbutton\" data-title=\"Test\" data-primary=\"OK\"></article>",
      "<article data-wb=\"cardbutton\" data-title=\"Confirm\" data-primary=\"Yes\" data-secondary=\"No\"></article>"
    ],
    "matrix": {
      "combinations": [
        { "title": "Card", "primary": "OK" },
        { "title": "Card", "primary": "Submit", "content": "Content" },
        { "title": "Card", "primary": "Yes", "secondary": "No" }
      ]
    }
  }
}

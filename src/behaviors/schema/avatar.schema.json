{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Avatar",
  "description": "Avatar component for user profile images with fallback initials",
  "type": "object",
  "behavior": "avatar",
  
  "properties": {
    "src": {
      "type": "string",
      "description": "Image source URL"
    },
    "initials": {
      "type": "string",
      "description": "Initials to show as fallback"
    },
    "name": {
      "type": "string",
      "description": "Full name (used to generate initials if not provided)"
    },
    "size": {
      "type": "string",
      "description": "Avatar size",
      "enum": ["sm", "md", "lg", "xl"],
      "default": "md"
    },
    "status": {
      "type": "string",
      "description": "Online status indicator",
      "enum": ["online", "offline", "busy", "away"]
    }
  },

  "compliance": {
    "baseClass": "wb-avatar",
    "requiredChildren": {},
    "optionalChildren": {},
    "styles": {
      "display": {"value": "inline-flex", "required": true},
      "borderRadius": {"value": "50%", "required": true}
    }
  },

  "test": {
    "setup": [
      "<div data-wb=\"avatar\" data-initials=\"JD\"></div>",
      "<div data-wb=\"avatar\" data-initials=\"JD\" data-size=\"lg\"></div>",
      "<div data-wb=\"avatar\" data-initials=\"AB\" data-status=\"online\"></div>"
    ],
    "matrix": {
      "combinations": [
        {"initials": "JD"},
        {"initials": "JD", "size": "lg"},
        {"initials": "AB", "status": "online"}
      ]
    }
  }
}

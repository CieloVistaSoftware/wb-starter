{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Footer",
  "behavior": "footer",
  "description": "Generates a site/page footer with copyright, links, and social icons. AutoInjects on <footer> elements.",
  "type": "object",
  "autoInject": {
    "selector": "footer",
    "description": "Any <footer> element automatically gets footer behavior when autoInject is enabled"
  },
  "compliance": {
    "baseClass": "wb-footer"
  },
  "properties": {
    "copyright": {
      "type": "string",
      "description": "Copyright text (e.g., '© 2025 Acme Inc')",
      "default": ""
    },
    "brand": {
      "type": "string",
      "description": "Brand name displayed in footer",
      "default": ""
    },
    "links": {
      "type": "string",
      "description": "Comma-separated list of link names (e.g., 'Privacy,Terms,Contact')",
      "default": ""
    },
    "linksHref": {
      "type": "string",
      "description": "Comma-separated list of link URLs matching links order",
      "default": ""
    },
    "social": {
      "type": "string",
      "description": "Comma-separated social platforms (github,twitter,linkedin,facebook,instagram,youtube,email,rss)",
      "default": ""
    },
    "socialHrefs": {
      "type": "string",
      "description": "Comma-separated social URLs matching social order",
      "default": ""
    },
    "sticky": {
      "type": "boolean",
      "description": "Make footer sticky at bottom of viewport",
      "default": false
    }
  },
  "slots": {
    "left": "Custom content for left section",
    "center": "Custom content for center section",
    "right": "Custom content for right section"
  },
  "cssClasses": {
    "wb-footer": "Base footer class",
    "wb-footer--sticky": "Sticky positioning",
    "wb-footer__left": "Left section container",
    "wb-footer__center": "Center section container",
    "wb-footer__right": "Right section container",
    "wb-footer__brand": "Brand text element",
    "wb-footer__copyright": "Copyright text element",
    "wb-footer__nav": "Navigation links container",
    "wb-footer__link": "Individual nav link",
    "wb-footer__social": "Social icons container",
    "wb-footer__social-link": "Individual social link"
  },
  "api": {
    "setCopyright": "Update the copyright text",
    "setBrand": "Update the brand text"
  },
  "test": {
    "setup": [
      "<footer data-wb=\"footer\" data-copyright=\"© 2025 Test\"></footer>",
      "<footer data-wb=\"footer\" data-brand=\"Acme\" data-links=\"Home,About\"></footer>",
      "<footer data-wb=\"footer\" data-social=\"github,twitter\" data-sticky></footer>"
    ],
    "functional": [
      {
        "type": "visual",
        "name": "renders copyright",
        "verify": "Footer displays copyright text"
      },
      {
        "type": "visual",
        "name": "renders nav links",
        "verify": "Footer displays navigation links"
      },
      {
        "type": "visual",
        "name": "renders social icons",
        "verify": "Social icons appear on right side"
      },
      {
        "type": "style",
        "name": "sticky class applied",
        "selector": "[data-sticky]",
        "verify": "Has wb-footer--sticky class"
      }
    ]
  },
  "examples": [
    {
      "description": "Simple footer with copyright",
      "html": "<footer data-copyright=\"© 2025 My Company\"></footer>"
    },
    {
      "description": "Footer with nav links",
      "html": "<footer data-copyright=\"© 2025\" data-links=\"Privacy,Terms,Contact\"></footer>"
    },
    {
      "description": "Full featured footer",
      "html": "<footer data-brand=\"Acme Inc\" data-copyright=\"© 2025\" data-links=\"About,Blog,Careers\" data-social=\"github,twitter,linkedin\"></footer>"
    }
  ]
}

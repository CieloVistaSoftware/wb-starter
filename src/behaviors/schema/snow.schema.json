{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "behavior": "snow",
  "properties": {
    "count": {
      "type": "number",
      "title": "Snowflake Count",
      "default": 30,
      "description": "Number of snowflakes"
    },
    "showButtons": {
      "type": "boolean",
      "title": "Show Button",
      "default": true,
      "description": "Whether to render a trigger button"
    },
    "repeat": {
      "type": "boolean",
      "title": "Repeat Animation",
      "default": true,
      "description": "Loop the animation indefinitely"
    },
    "delay": {
      "type": "string",
      "title": "Delay",
      "default": "0s",
      "description": "Delay before starting (e.g. 1s, 500ms)"
    },
    "duration": {
      "type": "string",
      "title": "Duration",
      "default": "8s",
      "description": "Length of the animation cycle"
    }
  },
  "compliance": {
    "baseClass": "wb-snow-trigger"
  },
  "test": {
    "setup": ["<button data-wb=\"snow\">Snow</button>"]
  }
}
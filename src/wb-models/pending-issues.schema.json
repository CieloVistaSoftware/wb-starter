{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wb-starter.local/schemas/pending-issues.schema.json",
  "title": "Pending Issues",
  "description": "Schema for the issue tracking system in WB Starter",
  "type": "object",
  "required": ["issues"],
  "properties": {
    "issues": {
      "type": "array",
      "description": "List of all tracked issues",
      "items": {
        "$ref": "#/definitions/Issue"
      }
    },
    "lastUpdated": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO 8601 timestamp of last modification"
    },
    "lastChecked": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO 8601 timestamp of last API check"
    }
  },
  "definitions": {
    "Issue": {
      "type": "object",
      "required": ["id", "description", "status", "createdAt"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier in format: {noteId}-p{paragraphIndex}",
          "pattern": "^.+-p\\d+$",
          "examples": ["note-1737302400000-p0", "note-1737302400000-p1"]
        },
        "description": {
          "type": "string",
          "description": "The issue description text",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "enum": ["pending", "pending-review", "resolved", "rejected"],
          "description": "Status: pending (new), pending-review (Claude claims fixed, awaiting approval), resolved (user approved), rejected (user rejected fix)",
          "default": "pending"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when the issue was created"
        },
        "claimedFixedAt": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "ISO 8601 timestamp when Claude claimed the issue was fixed"
        },
        "resolvedAt": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "ISO 8601 timestamp when the user approved the fix"
        },
        "resolution": {
          "type": ["string", "null"],
          "description": "Description of how the issue was fixed or root cause"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,

  "behavior": "pending-issues",
  "baseClass": "wb-pending-issues",

  "$view": [
    {
      "name": "container",
      "tag": "div",
      "class": "wb-pending-issues"
    }
  ],

  "$methods": {
    "addIssue": "Adds a new issue",
    "resolveIssue": "Marks an issue as resolved",
    "rejectIssue": "Marks an issue as rejected"
  },

  "$cssAPI": {
    "--wb-pending-issues-gap": "Gap between issue items"
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cardportfolio.schema.json",
  "title": "Portfolio Card",
  "description": "Full-featured professional portfolio card with skills, experience, projects, and more",
  "schemaFor": "cardportfolio",
  "baseClass": "wb-portfolio",
  "semanticElement": {
    "tagName": "article",
    "implicitRole": "article"
  },
  "compliance": {
    "baseClass": "wb-portfolio",
    "supportLevel": "stable",
    "accessibility": "high"
  },
  "properties": {
    "name": {
      "type": "string",
      "description": "Full name",
      "required": true,
      "default": ""
    },
    "title": {
      "type": "string",
      "description": "Job title / role",
      "default": ""
    },
    "company": {
      "type": "string",
      "description": "Current company name",
      "default": ""
    },
    "location": {
      "type": "string",
      "description": "Location (city, country)",
      "default": ""
    },
    "cover": {
      "type": "string",
      "description": "Cover/banner image URL",
      "default": ""
    },
    "avatar": {
      "type": "string",
      "description": "Profile photo URL",
      "default": ""
    },
    "bio": {
      "type": "string",
      "description": "Short biography / summary",
      "default": ""
    },
    "tagline": {
      "type": "string",
      "description": "Professional tagline or motto",
      "default": ""
    },
    "availability": {
      "type": "string",
      "enum": [
        "available",
        "busy",
        "not-available",
        "open-to-opportunities"
      ],
      "default": "available",
      "description": "Current availability status"
    },
    "email": {
      "type": "string",
      "description": "Email address",
      "default": ""
    },
    "phone": {
      "type": "string",
      "description": "Phone number",
      "default": ""
    },
    "website": {
      "type": "string",
      "description": "Personal website URL",
      "default": ""
    },
    "linkedin": {
      "type": "string",
      "description": "LinkedIn profile URL",
      "default": ""
    },
    "twitter": {
      "type": "string",
      "description": "Twitter/X profile URL",
      "default": ""
    },
    "github": {
      "type": "string",
      "description": "GitHub profile URL",
      "default": ""
    },
    "dribbble": {
      "type": "string",
      "description": "Dribbble profile URL",
      "default": ""
    },
    "skills": {
      "type": "string",
      "description": "Comma-separated list of skills",
      "default": ""
    },
    "skillLevels": {
      "type": "string",
      "description": "JSON array of {name, level (0-100)} for skill bars",
      "default": ""
    },
    "experience": {
      "type": "string",
      "description": "JSON array of {company, role, period, description}",
      "default": ""
    },
    "education": {
      "type": "string",
      "description": "JSON array of {school, degree, year}",
      "default": ""
    },
    "projects": {
      "type": "string",
      "description": "JSON array of {name, description, url, image}",
      "default": ""
    },
    "certifications": {
      "type": "string",
      "description": "Comma-separated list of certifications",
      "default": ""
    },
    "languages": {
      "type": "string",
      "description": "Comma-separated list of languages (e.g. 'English (Native), Spanish (Fluent)')",
      "default": ""
    },
    "stats": {
      "type": "string",
      "description": "JSON array of {label, value} for stats display",
      "default": ""
    },
    "cta": {
      "type": "string",
      "description": "Call-to-action button text",
      "default": ""
    },
    "ctaHref": {
      "type": "string",
      "description": "Call-to-action button link",
      "default": ""
    },
    "variant": {
      "type": "string",
      "enum": [
        "default",
        "compact",
        "horizontal",
        "full"
      ],
      "default": "default",
      "appliesClass": "wb-portfolio--{{value}}"
    },
    "size": {
      "type": "string",
      "enum": [
        "sm",
        "md",
        "lg",
        "xl",
        "full",
        "auto"
      ],
      "default": "auto"
    }
  },
  "$view": [
    {
      "name": "cover",
      "tag": "figure",
      "public": true,
      "createdWhen": "cover",
      "description": "Cover/banner image"
    },
    {
      "name": "header",
      "tag": "header",
      "public": true,
      "required": true,
      "description": "Identity section with avatar, name, title"
    },
    {
      "name": "main",
      "tag": "main",
      "public": true,
      "required": true,
      "description": "Main content area"
    },
    {
      "name": "bio-section",
      "tag": "section",
      "parent": "main",
      "createdWhen": "bio",
      "description": "Biography section"
    },
    {
      "name": "skills-section",
      "tag": "section",
      "parent": "main",
      "createdWhen": "skills OR skillLevels",
      "description": "Skills section"
    },
    {
      "name": "experience-section",
      "tag": "section",
      "parent": "main",
      "createdWhen": "experience",
      "description": "Work experience section"
    },
    {
      "name": "education-section",
      "tag": "section",
      "parent": "main",
      "createdWhen": "education",
      "description": "Education section"
    },
    {
      "name": "projects-section",
      "tag": "section",
      "parent": "main",
      "createdWhen": "projects",
      "description": "Projects showcase section"
    },
    {
      "name": "stats-section",
      "tag": "section",
      "parent": "main",
      "createdWhen": "stats",
      "description": "Stats/metrics section"
    },
    {
      "name": "contact",
      "tag": "address",
      "public": true,
      "createdWhen": "email OR phone OR website",
      "description": "Contact information"
    },
    {
      "name": "social",
      "tag": "nav",
      "public": true,
      "createdWhen": "linkedin OR twitter OR github OR dribbble",
      "description": "Social media links"
    },
    {
      "name": "footer",
      "tag": "footer",
      "public": true,
      "createdWhen": "cta",
      "description": "Footer with CTA"
    }
  ],
  "$methods": {
    "show": {
      "description": "Shows the card",
      "params": []
    },
    "hide": {
      "description": "Hides the card",
      "params": []
    },
    "toggle": {
      "description": "Toggles visibility",
      "params": []
    },
    "setAvailability": {
      "description": "Updates availability status",
      "params": [
        "status"
      ]
    }
  },
  "$cssAPI": {
    "--wb-portfolio-radius": {
      "default": "12px",
      "description": "Card border radius"
    },
    "--wb-portfolio-bg": {
      "default": "var(--bg-secondary)",
      "description": "Card background"
    },
    "--wb-portfolio-cover-height": {
      "default": "150px",
      "description": "Cover image height"
    },
    "--wb-portfolio-avatar-size": {
      "default": "120px",
      "description": "Avatar size"
    },
    "--wb-portfolio-avatar-border": {
      "default": "4px solid var(--bg-secondary)",
      "description": "Avatar border"
    },
    "--wb-portfolio-section-gap": {
      "default": "1.5rem",
      "description": "Gap between sections"
    }
  },
  "test": {
    "setup": [
      "<wb-cardportfolio name=\"John Doe\"></wb-cardportfolio>",
      "<wb-cardportfolio name=\"Jane Smith\" title=\"Designer\" skills=\"UI/UX,Figma,CSS\"></wb-cardportfolio>",
      "<wb-cardportfolio name=\"Dev\" variant=\"full\" experience='[{\"company\":\"ACME\",\"role\":\"Engineer\"}]'></wb-cardportfolio>"
    ],
    "matrix": {
      "combinations": [
        {
          "name": "Jane Smith",
          "title": "UX Designer",
          "company": "Anthropic",
          "skills": "Figma,CSS,React",
          "bio": "Creative designer with 8 years experience",
          "availability": "available"
        },
        {
          "name": "John Doe",
          "title": "Senior Engineer",
          "company": "Cielo Vista",
          "skills": "TypeScript,Node,SQL",
          "variant": "compact",
          "availability": "busy"
        },
        {
          "name": "Sarah Chen",
          "title": "Product Manager",
          "company": "TechCorp",
          "variant": "horizontal",
          "bio": "Building products users love",
          "cta": "Contact Me"
        },
        {
          "name": "Alex Rivera",
          "title": "Full Stack Dev",
          "skills": "Python,Go,Rust",
          "variant": "full",
          "availability": "open-to-opportunities",
          "stats": "[{\"label\":\"Projects\",\"value\":\"24\"},{\"label\":\"Years\",\"value\":\"10\"}]"
        }
      ]
    },
    "site": {
      "page": "cards",
      "tag": "wb-cardportfolio",
      "renders": true,
      "baseClass": "wb-portfolio",
      "minInstances": 4,
      "checkText": [
        "UX Designer",
        "Jane Smith",
        "Creative designer with 8 years experience",
        "Senior Engineer",
        "John Doe",
        "Product Manager"
      ],
      "checkClasses": [
        "wb-portfolio--compact"
      ],
      "checkAttributes": [
        "name",
        "title",
        "company",
        "skills",
        "availability"
      ]
    }
  },
  "_metadata": {
    "category": "cards",
    "icon": "ðŸ’¼",
    "since": "1.0.0",
    "status": "stable"
  }
}

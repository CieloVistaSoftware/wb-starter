{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cardportfolio.schema.json",
  "title": "Portfolio Card",
  "description": "Full-featured professional portfolio card with skills, experience, projects, and more",
  "behavior": "cardportfolio",
  "baseClass": "wb-portfolio",
  "semanticElement": {
    "tagName": "article",
    "implicitRole": "article"
  },
  "compliance": {
    "baseClass": "wb-portfolio",
    "supportLevel": "stable",
    "accessibility": "high"
  },
  "properties": {
    "name": {
      "type": "string",
      "description": "Full name",
      "required": true
    },
    "title": {
      "type": "string",
      "description": "Job title / role"
    },
    "company": {
      "type": "string",
      "description": "Current company name"
    },
    "location": {
      "type": "string",
      "description": "Location (city, country)"
    },
    "cover": {
      "type": "string",
      "description": "Cover/banner image URL"
    },
    "avatar": {
      "type": "string",
      "description": "Profile photo URL"
    },
    "bio": {
      "type": "string",
      "description": "Short biography / summary"
    },
    "tagline": {
      "type": "string",
      "description": "Professional tagline or motto"
    },
    "availability": {
      "type": "string",
      "enum": ["available", "busy", "not-available", "open-to-opportunities"],
      "default": "available",
      "description": "Current availability status"
    },
    "email": {
      "type": "string",
      "description": "Email address"
    },
    "phone": {
      "type": "string",
      "description": "Phone number"
    },
    "website": {
      "type": "string",
      "description": "Personal website URL"
    },
    "linkedin": {
      "type": "string",
      "description": "LinkedIn profile URL"
    },
    "twitter": {
      "type": "string",
      "description": "Twitter/X profile URL"
    },
    "github": {
      "type": "string",
      "description": "GitHub profile URL"
    },
    "dribbble": {
      "type": "string",
      "description": "Dribbble profile URL"
    },
    "skills": {
      "type": "string",
      "description": "Comma-separated list of skills"
    },
    "skillLevels": {
      "type": "string",
      "description": "JSON array of {name, level (0-100)} for skill bars"
    },
    "experience": {
      "type": "string",
      "description": "JSON array of {company, role, period, description}"
    },
    "education": {
      "type": "string",
      "description": "JSON array of {school, degree, year}"
    },
    "projects": {
      "type": "string",
      "description": "JSON array of {name, description, url, image}"
    },
    "certifications": {
      "type": "string",
      "description": "Comma-separated list of certifications"
    },
    "languages": {
      "type": "string",
      "description": "Comma-separated list of languages (e.g. 'English (Native), Spanish (Fluent)')"
    },
    "stats": {
      "type": "string",
      "description": "JSON array of {label, value} for stats display"
    },
    "cta": {
      "type": "string",
      "description": "Call-to-action button text"
    },
    "ctaHref": {
      "type": "string",
      "description": "Call-to-action button link"
    },
    "variant": {
      "type": "string",
      "enum": ["default", "compact", "horizontal", "full"],
      "default": "default",
      "appliesClass": "wb-portfolio--{{value}}"
    },
    "size": {
      "type": "string",
      "enum": ["sm", "md", "lg", "xl", "full", "auto"],
      "default": "auto"
    }
  },
  "$view": [
    {
      "name": "cover",
      "tag": "figure",
      "public": true,
      "createdWhen": "cover",
      "description": "Cover/banner image"
    },
    {
      "name": "header",
      "tag": "header",
      "public": true,
      "required": true,
      "description": "Identity section with avatar, name, title"
    },
    {
      "name": "main",
      "tag": "main",
      "public": true,
      "required": true,
      "description": "Main content area"
    },
    {
      "name": "bio-section",
      "tag": "section",
      "parent": "main",
      "createdWhen": "bio",
      "description": "Biography section"
    },
    {
      "name": "skills-section",
      "tag": "section",
      "parent": "main",
      "createdWhen": "skills OR skillLevels",
      "description": "Skills section"
    },
    {
      "name": "experience-section",
      "tag": "section",
      "parent": "main",
      "createdWhen": "experience",
      "description": "Work experience section"
    },
    {
      "name": "education-section",
      "tag": "section",
      "parent": "main",
      "createdWhen": "education",
      "description": "Education section"
    },
    {
      "name": "projects-section",
      "tag": "section",
      "parent": "main",
      "createdWhen": "projects",
      "description": "Projects showcase section"
    },
    {
      "name": "stats-section",
      "tag": "section",
      "parent": "main",
      "createdWhen": "stats",
      "description": "Stats/metrics section"
    },
    {
      "name": "contact",
      "tag": "address",
      "public": true,
      "createdWhen": "email OR phone OR website",
      "description": "Contact information"
    },
    {
      "name": "social",
      "tag": "nav",
      "public": true,
      "createdWhen": "linkedin OR twitter OR github OR dribbble",
      "description": "Social media links"
    },
    {
      "name": "footer",
      "tag": "footer",
      "public": true,
      "createdWhen": "cta",
      "description": "Footer with CTA"
    }
  ],
  "$methods": {
    "show": { "description": "Shows the card", "params": [] },
    "hide": { "description": "Hides the card", "params": [] },
    "toggle": { "description": "Toggles visibility", "params": [] },
    "setAvailability": { "description": "Updates availability status", "params": ["status"] }
  },
  "$cssAPI": {
    "--wb-portfolio-radius": { "default": "12px", "description": "Card border radius" },
    "--wb-portfolio-bg": { "default": "var(--bg-secondary)", "description": "Card background" },
    "--wb-portfolio-cover-height": { "default": "150px", "description": "Cover image height" },
    "--wb-portfolio-avatar-size": { "default": "120px", "description": "Avatar size" },
    "--wb-portfolio-avatar-border": { "default": "4px solid var(--bg-secondary)", "description": "Avatar border" },
    "--wb-portfolio-section-gap": { "default": "1.5rem", "description": "Gap between sections" }
  },
  "test": {
    "setup": [
      "<wb-cardportfolio name=\"John Doe\"></wb-cardportfolio>",
      "<wb-cardportfolio name=\"Jane Smith\" title=\"Designer\" skills=\"UI/UX,Figma,CSS\"></wb-cardportfolio>",
      "<wb-cardportfolio name=\"Dev\" variant=\"full\" experience='[{\"company\":\"ACME\",\"role\":\"Engineer\"}]'></wb-cardportfolio>"
    ]
  },
  "_metadata": {
    "category": "cards",
    "icon": "ðŸ’¼",
    "since": "1.0.0",
    "status": "stable"
  }
}

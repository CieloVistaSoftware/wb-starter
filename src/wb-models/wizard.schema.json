{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "wizard.schema.json",
  "title": "Wizard",
  "description": "Multi-step wizard for guided workflows with step navigation",
  "schemaFor": "wizard",
  "baseClass": "wb-wizard",
  "semanticElement": {
    "tagName": "div",
    "implicitRole": "form"
  },
  "compliance": {
    "baseClass": "wb-wizard",
    "supportLevel": "experimental",
    "accessibility": "medium"
  },
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the wizard",
      "default": ""
    },
    "steps": {
      "type": "array",
      "description": "Ordered steps in the wizard",
      "default": []
    },
    "activeStep": {
      "type": "integer",
      "description": "Zero-based index of the currently active step",
      "default": 0,
      "minimum": 0
    }
  },
  "$view": [
    {
      "name": "header",
      "tag": "header",
      "public": true,
      "createdWhen": "title",
      "description": "Wizard title bar"
    },
    {
      "name": "title",
      "tag": "h2",
      "parent": "header",
      "public": true,
      "content": "{{title}}",
      "createdWhen": "title"
    },
    {
      "name": "nav",
      "tag": "nav",
      "public": true,
      "required": true,
      "description": "Step indicator/navigation"
    },
    {
      "name": "content",
      "tag": "main",
      "public": true,
      "required": true,
      "description": "Active step content area"
    },
    {
      "name": "footer",
      "tag": "footer",
      "public": true,
      "required": true,
      "description": "Navigation buttons (prev/next)"
    }
  ],
  "$methods": {
    "show": {
      "description": "Shows the wizard",
      "params": []
    },
    "hide": {
      "description": "Hides the wizard",
      "params": []
    },
    "next": {
      "description": "Advances to the next step",
      "params": [],
      "returns": "boolean"
    },
    "prev": {
      "description": "Goes back to the previous step",
      "params": [],
      "returns": "boolean"
    },
    "goTo": {
      "description": "Jumps to a specific step by index",
      "params": ["stepIndex"]
    },
    "reset": {
      "description": "Resets wizard to first step",
      "params": []
    }
  },
  "$cssAPI": {
    "--wb-wizard-padding": {
      "default": "1.5rem",
      "description": "Wizard container padding"
    },
    "--wb-wizard-step-indicator-color": {
      "default": "var(--primary, #6366f1)",
      "description": "Active step indicator color"
    }
  },
  "test": {
    "setup": [
      "<wb-wizard title=\"Test Wizard\"></wb-wizard>"
    ],
    "matrix": {
      "combinations": [
        {
          "title": "Site Builder Wizard"
        },
        {
          "title": "Preview Wizard",
          "activeStep": 0
        },
        {
          "title": "Multi-Step",
          "activeStep": 1
        }
      ]
    }
  },
  "_metadata": {
    "category": "layout",
    "icon": "ðŸ§™",
    "since": "1.0.0",
    "status": "experimental"
  }
}

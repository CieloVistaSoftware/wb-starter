{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ripple.schema.json",
  "title": "Ripple",
  "description": "Material Design ripple effect on click",
  "schemaFor": "ripple",
  "baseClass": "wb-ripple",
  "semanticElement": {
    "tagName": "div"
  },
  "compliance": {
    "baseClass": "wb-ripple",
    "supportLevel": "stable",
    "accessibility": "high"
  },
  "properties": {
    "color": {
      "type": "string",
      "description": "Ripple color",
      "default": "rgba(255,255,255,0.3)"
    },
    "duration": {
      "type": "number",
      "description": "Animation duration (ms)",
      "default": 600
    },
    "centered": {
      "type": "boolean",
      "description": "Center ripple instead of click position",
      "default": false
    }
  },
  "$view": [
    {
      "name": "effect",
      "tag": "span",
      "public": false,
      "description": "Ripple effect element (created on click)"
    }
  ],
  "$methods": {
    "trigger": {
      "description": "Manually triggers ripple",
      "params": [
        "x",
        "y"
      ]
    }
  },
  "$cssAPI": {
    "--wb-ripple-color": {
      "default": "rgba(255,255,255,0.3)",
      "description": "Ripple color"
    },
    "--wb-ripple-duration": {
      "default": "600ms",
      "description": "Animation duration"
    }
  },
  "events": {
    "wb:ripple:show": {
      "description": "Ripple started",
      "detail": {
        "x": "number",
        "y": "number"
      }
    }
  },
  "test": {
    "setup": [
      "<wb-ripple>Basic ripple content</wb-ripple>",
      "<wb-ripple centered>with centered</wb-ripple>",
      "<wb-ripple color=\"rgba(255,255,255,0.3)\">color=\"rgba(255,255,255,0.3)\"</wb-ripple>",
      "<wb-ripple duration=\"600\">duration=600</wb-ripple>",
      "<wb-ripple centered color=\"rgba(255,255,255,0.3)\">Combined: with centered, color=\"rgba(255,255,255,0.3)\"</wb-ripple>"
    ],
    "matrix": {
      "combinations": [
        {},
        {
          "color": "rgba(0,0,0,0.2)"
        },
        {
          "duration": 300
        }
      ]
    },
    "site": {
      "page": "effects",
      "tag": "wb-ripple",
      "renders": true,
      "baseClass": "wb-ripple",
      "minInstances": 3,
      "checkText": [],
      "checkClasses": [],
      "checkAttributes": []
    }
  },
  "_metadata": {
    "category": "effects",
    "icon": "ðŸ’§",
    "since": "1.0.0",
    "status": "stable"
  }
}

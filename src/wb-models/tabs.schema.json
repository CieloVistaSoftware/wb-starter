{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "tabs.schema.json",
  "title": "Tabs",
  "description": "Tab navigation for switching between content panels. Use <wb-tab> children.",
  "behavior": "tabs",
  "baseClass": "wb-tabs",
  "semanticElement": {
    "tagName": "div",
    "implicitRole": "tablist"
  },
  "compliance": {
    "baseClass": "wb-tabs",
    "supportLevel": "stable",
    "accessibility": "high"
  },
  "children": {
    "allowed": ["wb-tab"],
    "description": "Use <wb-tab label=\"...\"> for each tab panel"
  },
  "properties": {
    "variant": {
      "type": "string",
      "enum": ["default", "pills", "underline", "bordered"],
      "default": "default",
      "appliesClass": "wb-tabs--{{value}}"
    },
    "size": {
      "type": "string",
      "enum": ["sm", "md", "lg"],
      "default": "md",
      "appliesClass": "wb-tabs--{{value}}"
    },
    "fullWidth": {
      "type": "boolean",
      "description": "Tabs fill container width",
      "default": false,
      "appliesClass": "wb-tabs--full-width"
    },
    "vertical": {
      "type": "boolean",
      "description": "Vertical tab layout",
      "default": false,
      "appliesClass": "wb-tabs--vertical"
    }
  },
  "$view": [],
  "$methods": {
    "setActiveTab": {
      "description": "Activates a tab by index",
      "params": ["index"]
    },
    "getActiveTab": {
      "description": "Returns active tab index",
      "params": [],
      "returns": "number"
    },
    "next": {
      "description": "Activates next tab (skips disabled)",
      "params": []
    },
    "prev": {
      "description": "Activates previous tab (skips disabled)",
      "params": []
    },
    "first": {
      "description": "Activates first enabled tab",
      "params": []
    },
    "last": {
      "description": "Activates last enabled tab",
      "params": []
    }
  },
  "$cssAPI": {
    "--wb-tabs-gap": {
      "default": "0",
      "description": "Gap between tabs"
    },
    "--wb-tabs-border": {
      "default": "1px solid var(--border-color, #e0e0e0)",
      "description": "Tab list border"
    },
    "--wb-tabs-tab-padding": {
      "default": "0.75rem 1rem",
      "description": "Tab padding"
    },
    "--wb-tabs-tab-color": {
      "default": "var(--text-secondary, #666)",
      "description": "Tab text color"
    },
    "--wb-tabs-tab-bg": {
      "default": "transparent",
      "description": "Tab background"
    },
    "--wb-tabs-tab-active-color": {
      "default": "var(--primary, #6366f1)",
      "description": "Active tab color"
    },
    "--wb-tabs-tab-active-bg": {
      "default": "transparent",
      "description": "Active tab background"
    },
    "--wb-tabs-tab-hover-color": {
      "default": "var(--text-primary, #1a1a1a)",
      "description": "Tab hover color"
    },
    "--wb-tabs-indicator-color": {
      "default": "var(--primary, #6366f1)",
      "description": "Active indicator color"
    },
    "--wb-tabs-indicator-height": {
      "default": "2px",
      "description": "Active indicator height"
    },
    "--wb-tabs-panel-padding": {
      "default": "1rem 0",
      "description": "Panel padding"
    }
  },
  "accessibility": {
    "tablist": {
      "role": "tablist"
    },
    "tab": {
      "role": "tab",
      "ariaSelected": "dynamic",
      "ariaControls": "panel id",
      "ariaDisabled": "when disabled"
    },
    "panel": {
      "role": "tabpanel",
      "ariaLabelledBy": "tab id"
    }
  },
  "events": {
    "wb:tabs:change": {
      "description": "Tab changed",
      "detail": {
        "index": "number",
        "previousIndex": "number"
      }
    },
    "wb:tab:close": {
      "description": "Closable tab was closed",
      "detail": {
        "index": "number",
        "label": "string"
      }
    }
  },
  "test": {
    "functional": true,
    "setup": [
      "<wb-tabs><wb-tab label=\"First\">Content 1</wb-tab><wb-tab label=\"Second\">Content 2</wb-tab></wb-tabs>",
      "<wb-tabs><wb-tab label=\"With Icon\" icon=\"ðŸ“Š\">Content</wb-tab><wb-tab label=\"Plain\">Content</wb-tab></wb-tabs>",
      "<wb-tabs><wb-tab label=\"Normal\">A</wb-tab><wb-tab label=\"Disabled\" disabled>B</wb-tab></wb-tabs>",
      "<wb-tabs><wb-tab label=\"Closable\" closable>Content</wb-tab><wb-tab label=\"Fixed\">Content</wb-tab></wb-tabs>",
      "<wb-tabs><wb-tab label=\"With Badge\" badge=\"5\">Content</wb-tab></wb-tabs>",
      "<wb-tabs variant=\"pills\"><wb-tab label=\"One\">A</wb-tab><wb-tab label=\"Two\">B</wb-tab></wb-tabs>",
      "<wb-tabs variant=\"underline\"><wb-tab label=\"One\">A</wb-tab><wb-tab label=\"Two\">B</wb-tab></wb-tabs>",
      "<wb-tabs size=\"lg\"><wb-tab label=\"Large\">Content</wb-tab></wb-tabs>"
    ],
    "matrix": {
      "combinations": [
        { "variant": "pills" },
        { "variant": "underline" },
        { "variant": "bordered" },
        { "size": "sm" },
        { "size": "lg" },
        { "fullWidth": true },
        { "vertical": true }
      ]
    }
  },
  "_metadata": {
    "category": "navigation",
    "icon": "ðŸ“‘",
    "since": "1.0.0",
    "status": "stable",
    "related": ["tab"]
  }
}

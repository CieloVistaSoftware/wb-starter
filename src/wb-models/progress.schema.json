{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "progress.schema.json",
  "title": "Progress",
  "description": "Progress bar with determinate and indeterminate states",
  "behavior": "progress",
  "baseClass": "wb-progress",
  "semanticElement": {
    "tagName": "div",
    "implicitRole": "progressbar"
  },
  "compliance": {
    "baseClass": "wb-progress",
    "supportLevel": "stable",
    "accessibility": "high"
  },
  "properties": {
    "value": {
      "type": "number",
      "description": "Current progress value (0-100)",
      "default": 0,
      "minimum": 0,
      "maximum": 100
    },
    "max": {
      "type": "number",
      "description": "Maximum value",
      "default": 100
    },
    "label": {
      "type": "string",
      "description": "Progress label text"
    },
    "showValue": {
      "type": "boolean",
      "description": "Show percentage value",
      "default": false
    },
    "variant": {
      "type": "string",
      "description": "Color variant",
      "enum": [
        "default",
        "primary",
        "success",
        "warning",
        "error",
        "info"
      ],
      "default": "primary",
      "appliesClass": "wb-progress--{{value}}"
    },
    "size": {
      "type": "string",
      "description": "Bar height size",
      "enum": [
        "xs",
        "sm",
        "md",
        "lg",
        "xl"
      ],
      "default": "md",
      "appliesClass": "wb-progress--{{value}}"
    },
    "animated": {
      "type": "boolean",
      "description": "Animate on load",
      "default": true
    },
    "striped": {
      "type": "boolean",
      "description": "Show striped pattern",
      "default": false,
      "appliesClass": "wb-progress--striped"
    },
    "indeterminate": {
      "type": "boolean",
      "description": "Indeterminate loading state",
      "default": false,
      "appliesClass": "wb-progress--indeterminate"
    }
  },
  "$view": [
    {
      "name": "header",
      "tag": "div",
      "public": false,
      "createdWhen": "label OR showValue",
      "description": "Header with label and value"
    },
    {
      "name": "label",
      "tag": "span",
      "parent": "header",
      "public": true,
      "content": "{{label}}",
      "createdWhen": "label",
      "description": "Progress label"
    },
    {
      "name": "value-text",
      "tag": "span",
      "parent": "header",
      "public": true,
      "createdWhen": "showValue",
      "description": "Percentage value display"
    },
    {
      "name": "track",
      "tag": "div",
      "public": true,
      "required": true,
      "description": "Background track"
    },
    {
      "name": "bar",
      "tag": "div",
      "parent": "track",
      "public": true,
      "required": true,
      "description": "Progress indicator bar"
    }
  ],
  "$methods": {
    "getValue": {
      "description": "Gets the current progress value",
      "params": [],
      "returns": "number"
    },
    "setValue": {
      "description": "Sets the progress value",
      "params": [
        "value"
      ]
    },
    "increment": {
      "description": "Increments the progress value",
      "params": [
        "amount"
      ]
    },
    "decrement": {
      "description": "Decrements the progress value",
      "params": [
        "amount"
      ]
    },
    "reset": {
      "description": "Resets progress to 0",
      "params": []
    },
    "complete": {
      "description": "Sets progress to 100%",
      "params": []
    },
    "setIndeterminate": {
      "description": "Sets indeterminate state",
      "params": [
        "isIndeterminate"
      ]
    }
  },
  "$cssAPI": {
    "--wb-progress-height": {
      "default": "8px",
      "description": "Progress bar height"
    },
    "--wb-progress-radius": {
      "default": "9999px",
      "description": "Border radius"
    },
    "--wb-progress-track-bg": {
      "default": "var(--bg-secondary, #e5e7eb)",
      "description": "Track background color"
    },
    "--wb-progress-bar-bg": {
      "default": "var(--primary, #6366f1)",
      "description": "Bar background color"
    },
    "--wb-progress-transition": {
      "default": "width 0.3s ease",
      "description": "Value change transition"
    },
    "--wb-progress-primary-bg": {
      "default": "var(--primary, #6366f1)",
      "description": "Primary variant bar color"
    },
    "--wb-progress-success-bg": {
      "default": "var(--success, #22c55e)",
      "description": "Success variant bar color"
    },
    "--wb-progress-warning-bg": {
      "default": "var(--warning, #f59e0b)",
      "description": "Warning variant bar color"
    },
    "--wb-progress-error-bg": {
      "default": "var(--error, #ef4444)",
      "description": "Error variant bar color"
    },
    "--wb-progress-info-bg": {
      "default": "var(--info, #3b82f6)",
      "description": "Info variant bar color"
    },
    "--wb-progress-stripe-color": {
      "default": "rgba(255,255,255,0.2)",
      "description": "Stripe overlay color"
    },
    "--wb-progress-stripe-width": {
      "default": "1rem",
      "description": "Stripe width"
    },
    "--wb-progress-label-size": {
      "default": "0.875rem",
      "description": "Label font size"
    },
    "--wb-progress-label-color": {
      "default": "var(--text-primary, #1a1a1a)",
      "description": "Label text color"
    },
    "--wb-progress-value-size": {
      "default": "0.875rem",
      "description": "Value text font size"
    },
    "--wb-progress-value-color": {
      "default": "var(--text-secondary, #6b7280)",
      "description": "Value text color"
    },
    "--wb-progress-gap": {
      "default": "0.5rem",
      "description": "Gap between label and bar"
    }
  },
  "accessibility": {
    "role": "progressbar",
    "ariaValueMin": "0",
    "ariaValueMax": "dynamic from max",
    "ariaValueNow": "dynamic from value",
    "ariaLabel": "dynamic from label or default"
  },
  "test": {
    "functional": true,
    "setup": [
      "<wb-progress value=\"50\"></wb-progress>",
      "<wb-progress value=\"75\" show-value></wb-progress>",
      "<wb-progress value=\"25\" striped></wb-progress>",
      "<progress data-wb=\"progress\" value=\"50\" max=\"100\"></progress>"
    ],
    "matrix": {
      "combinations": [
        {
          "value": 0
        },
        {
          "value": 25
        },
        {
          "value": 50
        },
        {
          "value": 75
        },
        {
          "value": 100
        },
        {
          "value": 50,
          "label": "Loading..."
        },
        {
          "value": 50,
          "showValue": true
        },
        {
          "value": 50,
          "striped": true
        },
        {
          "value": 50,
          "variant": "success"
        },
        {
          "value": 50,
          "variant": "warning"
        },
        {
          "value": 50,
          "variant": "error"
        },
        {
          "value": 50,
          "size": "sm"
        },
        {
          "value": 50,
          "size": "lg"
        },
        {
          "indeterminate": true
        }
      ]
    }
  },
  "_metadata": {
    "category": "feedback",
    "icon": "ðŸ“Š",
    "since": "1.0.0",
    "status": "stable"
  }
}
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "collapse.schema.json",
  "title": "Collapse",
  "description": "Collapsible content area.",
  "schemaFor": "collapse",
  "compliance": {
    "baseClass": "wb-collapse",
    "supportLevel": "stable",
    "accessibility": "high"
  },
  "properties": {
    "heading": {
      "type": "string",
      "default": "Toggle",
      "description": "Text displayed on the clickable trigger button"
    },
    "expanded": {
      "type": "boolean",
      "default": false,
      "description": "Whether the content is initially visible"
    },
    "target": {
      "type": "string",
      "description": "CSS selector of a remote element to toggle instead of wrapping content"
    }
  },
  "$view": [],
  "$methods": {},
  "$cssAPI": {},
  "test": {
    "setup": [
      "<wb-collapse>Basic collapse content</wb-collapse>",
      "<wb-collapse expanded>with expanded</wb-collapse>",
      "<wb-collapse>Test permutation 3</wb-collapse>",
      "<wb-collapse>Test permutation 4</wb-collapse>",
      "<wb-collapse>Test permutation 5</wb-collapse>"
    ],
    "matrix": {
      "combinations": [
        {
          "expanded": false
        },
        {
          "expanded": true
        }
      ]
    },
    "site": {
      "page": "interactive",
      "tag": "wb-collapse",
      "renders": true,
      "baseClass": "wb-collapse",
      "minInstances": 2,
      "checkText": [],
      "checkClasses": [],
      "checkAttributes": []
    }
  }
}

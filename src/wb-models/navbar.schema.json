{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "navbar.schema.json",
  "title": "Navbar",
  "description": "Navigation bar with brand, links, and responsive menu",
  "behavior": "navbar",
  "baseClass": "wb-navbar",
  "semanticElement": {
    "tagName": "nav",
    "implicitRole": "navigation"
  },
  "compliance": {
    "baseClass": "wb-navbar",
    "supportLevel": "stable",
    "accessibility": "high"
  },
  "properties": {
    "brand": {
      "type": "string",
      "description": "Brand text"
    },
    "brandHref": {
      "type": "string",
      "description": "Brand link URL",
      "default": "/"
    },
    "logo": {
      "type": "string",
      "description": "Logo image URL"
    },
    "logoSize": {
      "type": "string",
      "description": "Logo size in pixels",
      "default": "32"
    },
    "tagline": {
      "type": "string",
      "description": "Brand tagline or subtitle"
    },
    "items": {
      "type": "string",
      "description": "Navigation items as JSON [{label, href}]"
    },
    "sticky": {
      "type": "boolean",
      "description": "Sticky positioning",
      "default": false,
      "appliesClass": "wb-navbar--sticky"
    },
    "variant": {
      "type": "string",
      "enum": [
        "default",
        "dark",
        "transparent"
      ],
      "default": "default",
      "appliesClass": "wb-navbar--{{value}}"
    }
  },
  "$view": [],
  "$methods": {
    "openMenu": {
      "description": "Opens mobile menu",
      "params": []
    },
    "closeMenu": {
      "description": "Closes mobile menu",
      "params": []
    },
    "toggleMenu": {
      "description": "Toggles mobile menu",
      "params": []
    }
  },
  "$cssAPI": {
    "--wb-navbar-height": {
      "default": "56px",
      "description": "Navbar height"
    },
    "--wb-navbar-padding": {
      "default": "0 1rem",
      "description": "Navbar padding"
    },
    "--wb-navbar-gap": {
      "default": "1.5rem",
      "description": "Gap between nav items"
    },
    "--wb-navbar-bg": {
      "default": "var(--bg-secondary, #1f2937)",
      "description": "Background"
    },
    "--wb-navbar-border": {
      "default": "none",
      "description": "Border"
    },
    "--wb-navbar-shadow": {
      "default": "0 1px 3px rgba(0,0,0,0.12), 0 1px 2px rgba(0,0,0,0.24)",
      "description": "Shadow"
    },
    "--wb-navbar-brand-size": {
      "default": "1.25rem",
      "description": "Brand font size"
    },
    "--wb-navbar-brand-weight": {
      "default": "600",
      "description": "Brand font weight"
    },
    "--wb-navbar-link-size": {
      "default": "0.875rem",
      "description": "Link font size"
    },
    "--wb-navbar-link-weight": {
      "default": "500",
      "description": "Link font weight"
    },
    "--wb-navbar-link-color": {
      "default": "inherit",
      "description": "Link color"
    },
    "--wb-navbar-link-hover-color": {
      "default": "var(--primary, #818cf8)",
      "description": "Link hover color"
    }
  },
  "accessibility": {
    "role": "navigation",
    "ariaLabel": "Main navigation"
  },
  "test": {
    "setup": [
      "<wb-navbar>Basic navbar content</wb-navbar>",
      "<wb-navbar brand=\"MySite\"></wb-navbar>",
      "<wb-navbar brand=\"MySite\" brand-href=\"/home\">with brand-href</wb-navbar>",
      "<wb-navbar brand=\"MySite\" sticky>with sticky</wb-navbar>",
      "<wb-navbar brand=\"MySite\" variant=\"dark\">variant=dark</wb-navbar>",
      "<wb-navbar brand=\"MySite\" variant=\"default\">variant=default</wb-navbar>",
      "<wb-navbar brand=\"MySite\" variant=\"transparent\">variant=transparent</wb-navbar>",
      "<wb-navbar brand=\"MySite\"><a href=\"?page=home\">üè† Home</a><a href=\"?page=about\">‚ÑπÔ∏è About</a></wb-navbar>",
      "<wb-navbar brand=\"MySite\"><a href=\"?page=home\">Home</a><a href=\"?page=components\">Components</a><a href=\"?page=behaviors\">Behaviors</a></wb-navbar>",
      "<wb-navbar brand=\"TestSite\" sticky><a href=\"?page=home\">Home</a><a href=\"?page=about\">About</a><a href=\"?page=services\">Services</a><a href=\"?page=contact\">Contact</a></wb-navbar>",
      "<wb-navbar brand=\"WB\" sticky><a href=\"?page=home\">üè† Home</a><a href=\"?page=components\">üß© Components</a><a href=\"?page=behaviors\">‚ö° Behaviors</a><a href=\"?page=themes\">üé® Themes</a><a href=\"?page=docs\">üìñ Docs</a><a href=\"?page=about\">‚ÑπÔ∏è About</a></wb-navbar>",
      "<wb-navbar items=\"Home:?page=home,About:?page=about,Contact:?page=contact\"></wb-navbar>",
      "<wb-navbar logo=\"https://placehold.co/32x32\" brand=\"MySite\">with logo</wb-navbar>"
    ],
    "matrix": {
      "combinations": [
        {
          "brand": "MySite"
        },
        {
          "brand": "MySite",
          "sticky": true
        },
        {
          "brand": "MySite",
          "variant": "dark"
        },
        {
          "brand": "MySite",
          "variant": "transparent"
        }
      ]
    },
    "functional": {
      "brandDisplay": [
        {
          "name": "Brand Not Duplicated",
          "setup": "<wb-navbar brand=\"MySite\"><a href=\"?page=themes\">Themes</a></wb-navbar>",
          "expect": {
            "allTextMatches": "MySite",
            "count": 1
          }
        }
      ],
      "childLinks": [
        {
          "name": "Brand + Child Links",
          "setup": "<wb-navbar brand=\"MySite\"><a href=\"?page=home\">Home</a><a href=\"?page=about\">About</a></wb-navbar>",
          "expect": {
            "querySelector": ".wb-navbar__brand",
            "textContains": "MySite",
            "childSelector": "a",
            "childCount": 2
          }
        },
        {
          "name": "Child Links Preserved",
          "setup": "<wb-navbar brand=\"TestBrand\"><a href=\"?page=home\">Home</a><a href=\"?page=components\">Components</a></wb-navbar>",
          "selector": "a[href='?page=home']",
          "expect": {
            "exists": true,
            "textContains": "Home"
          }
        },
        {
          "name": "Multi-page Navigation",
          "setup": "<wb-navbar brand=\"WB\" sticky><a href=\"?page=home\">üè† Home</a><a href=\"?page=components\">üß© Components</a><a href=\"?page=behaviors\">‚ö° Behaviors</a><a href=\"?page=themes\">üé® Themes</a><a href=\"?page=docs\">üìñ Docs</a><a href=\"?page=about\">‚ÑπÔ∏è About</a></wb-navbar>",
          "expect": {
            "querySelector": ".wb-navbar__menu",
            "childSelector": "a",
            "childCountMin": 6
          }
        }
      ],
      "itemsAttribute": [
        {
          "name": "Items from attribute",
          "setup": "<wb-navbar items=\"Home:?page=home,About:?page=about\"></wb-navbar>",
          "selector": ".wb-navbar__menu a",
          "expect": {
            "count": 2
          }
        }
      ]
    }
  },
  "_metadata": {
    "category": "layout",
    "icon": "üß≠",
    "since": "1.0.0",
    "status": "stable"
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WB Behaviors Schema",
  "description": "Master schema defining all behavior metadata, properties, interactions, accessibility, and test requirements",
  "schemaFor": "behaviors",
  "type": "object",
  "version": "3.0.0",
  "definitions": {
    "behaviorType": {
      "type": "string",
      "enum": [
        "element",
        "container",
        "modifier",
        "action"
      ],
      "description": "The fundamental type of this behavior"
    },
    "htmlElement": {
      "type": "string",
      "enum": [
        "div",
        "span",
        "section",
        "article",
        "aside",
        "nav",
        "header",
        "footer",
        "main",
        "button",
        "a",
        "input",
        "textarea",
        "select",
        "form",
        "fieldset",
        "label",
        "img",
        "video",
        "audio",
        "iframe",
        "figure",
        "picture",
        "table",
        "ul",
        "ol",
        "dl",
        "li",
        "dt",
        "dd",
        "details"
      ],
      "description": "Supported HTML elements for behaviors"
    },
    "behaviorCategory": {
      "type": "string",
      "enum": [
        "buttons",
        "inputs",
        "selection",
        "feedback",
        "overlays",
        "navigation",
        "data",
        "media",
        "effects",
        "utilities"
      ],
      "description": "Categorization of behaviors for organization"
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the behavior",
      "default": ""
    },
    "src": {
      "type": "string",
      "description": "Path to the JavaScript file implementing this behavior (e.g. 'src/wb-viewmodels/ripple.js')"
    },
    "type": {
      "$ref": "#/definitions/behaviorType",
      "type": "string",
      "default": ""
    },
    "category": {
      "$ref": "#/definitions/behaviorCategory",
      "type": "string",
      "default": ""
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of what the behavior does",
      "default": ""
    },
    "selector": {
      "type": "string",
      "description": "CSS selector that identifies elements this behavior applies to",
      "default": ""
    },
    "attributes": {
      "type": "object",
      "description": "Configuration attributes for the behavior",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    },
    "events": {
      "type": "array",
      "description": "Events this behavior responds to",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "dependencies": {
      "type": "array",
      "description": "Other behaviors or components this behavior depends on",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "accessibility": {
      "type": "object",
      "description": "Accessibility requirements and ARIA attributes",
      "properties": {
        "role": {
          "type": "string"
        },
        "ariaAttributes": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "keyboardSupport": {
          "type": "boolean"
        }
      },
      "default": {}
    },
    "testCases": {
      "type": "array",
      "description": "Test scenarios for this behavior",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "setup": {
            "type": "string"
          },
          "action": {
            "type": "string"
          },
          "expected": {
            "type": "string"
          }
        }
      },
      "default": []
    }
  },
  "required": ["name", "type", "src", "category", "description"],
 

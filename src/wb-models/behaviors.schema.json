{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WB Behaviors Schema",
  "description": "Master schema defining all behavior metadata, properties, interactions, accessibility, and test requirements",
  "schemaFor": "behaviors",
  "type": "behavior-schema",
  "version": "3.0.0",
  "definitions": {
    "behaviorType": {
      "type": "string",
      "enum": [
        "element",
        "container",
        "modifier",
        "action"
      ],
      "description": "The fundamental type of this behavior"
    },
    "htmlElement": {
      "type": "string",
      "enum": [
        "div",
        "span",
        "section",
        "article",
        "aside",
        "nav",
        "header",
        "footer",
        "main",
        "button",
        "a",
        "input",
        "textarea",
        "select",
        "form",
        "fieldset",
        "label",
        "img",
        "video",
        "audio",
        "iframe",
        "figure",
        "picture",
        "table",
        "ul",
        "ol",
        "dl",
        "li",
        "dt",
        "dd",
        "details"
      ],
      "description": "Supported HTML elements for behaviors"
    },
    "behaviorCategory": {
      "type": "string",
      "enum": [
        "buttons",
        "inputs",
        "selection",
        "feedback",
        "overlays",
        "navigation",
        "data",
        "media",
        "effects",
        "utilities"
      ],
      "description": "Categorization of behaviors for organization"
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the behavior"
    },
    "type": {
      "$ref": "#/definitions/behaviorType"
    },
    "category": {
      "$ref": "#/definitions/behaviorCategory"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of what the behavior does"
    },
    "selector": {
      "type": "string",
      "description": "CSS selector that identifies elements this behavior applies to"
    },
    "attributes": {
      "type": "object",
      "description": "Configuration attributes for the behavior",
      "additionalProperties": {
        "type": "string"
      }
    },
    "events": {
      "type": "array",
      "description": "Events this behavior responds to",
      "items": {
        "type": "string"
      }
    },
    "dependencies": {
      "type": "array",
      "description": "Other behaviors or components this behavior depends on",
      "items": {
        "type": "string"
      }
    },
    "accessibility": {
      "type": "object",
      "description": "Accessibility requirements and ARIA attributes",
      "properties": {
        "role": {"type": "string"},
        "ariaAttributes": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "keyboardSupport": {"type": "boolean"}
      }
    },
    "testCases": {
      "type": "array",
      "description": "Test scenarios for this behavior",
      "items": {
        "type": "object",
        "properties": {
          "description": {"type": "string"},
          "setup": {"type": "string"},
          "action": {"type": "string"},
          "expected": {"type": "string"}
        }
      }
    }
  },
  "required": ["name", "type", "category", "description"],
  "behaviorInventory": {
    "categories": {
      "buttons": [
        {"name": "wb-btn", "type": "modifier", "description": "Button styling and variants"},
        {"name": "x-ripple", "type": "action", "description": "Material design ripple effect"},
        {"name": "x-toast", "type": "action", "description": "Toast notification trigger"},
        {"name": "x-tooltip", "type": "modifier", "description": "Tooltip display"}
      ],

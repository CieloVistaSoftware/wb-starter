        {"name": "x-search", "type": "modifier", "description": "Search input with icon"},
        {"name": "x-colorpicker", "type": "modifier", "description": "Color picker input"},
        {"name": "x-masked", "type": "modifier", "description": "Input masking"},
        {"name": "textarea", "type": "element", "description": "Enhanced textarea"}

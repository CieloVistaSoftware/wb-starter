{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "copy.schema.json",
  "title": "Copy",
  "description": "Click to copy text to clipboard.",
  "schemaFor": "copy",
  "compliance": {
    "baseClass": "wb-copy",
    "supportLevel": "stable",
    "accessibility": "high"
  },
  "properties": {
    "text": {
      "type": "string",
      "description": "Text to copy",
      "default": ""
    },
    "target": {
      "type": "string",
      "description": "Selector of element to copy from",
      "default": ""
    }
  },
  "$view": [],
  "$methods": {},
  "$cssAPI": {},
  "test": {
    "setup": [
      "<wb-copy>Basic copy content</wb-copy>",
      "<wb-copy text=\"Sample text\">text=\"Sample text\"</wb-copy>",
      "<wb-copy target=\"Sample target\">target=\"Sample target\"</wb-copy>",
      "<wb-copy text=\"Sample text\" target=\"Sample target\">Combined: text=\"Sample text\", target=\"Sample target\"</wb-copy>",
      "<wb-copy>Test permutation 5</wb-copy>"
    ],
    "matrix": {
      "combinations": [
        {
          "text": "Hello World"
        },
        {
          "text": "npm install wb-starter"
        }
      ]
    },
    "site": {
      "page": "interactive",
      "tag": "wb-copy",
      "renders": true,
      "baseClass": "wb-copy",
      "minInstances": 2,
      "checkText": [
        "Hello World",
        "npm install wb-starter"
      ],
      "checkClasses": [],
      "checkAttributes": [
        "text"
      ]
    }
  }
}

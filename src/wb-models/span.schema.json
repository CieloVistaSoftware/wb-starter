{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "span.schema.json",
  "title": "Span",
  "description": "A generic inline container for applying utility classes and variants. Useful for traffic lights (window controls), badges, and status indicators.",
  
  "behavior": "span",
  "baseClass": "wb-span",
  
  "semanticElement": {
    "tagName": "span",
    "implicitRole": "generic"
  },
  
  "properties": {
    "variant": {
      "type": "string",
      "description": "Visual style variant",
      "enum": ["red", "yellow", "green", "dot", "primary", "secondary", "success", "error", "warning", "info"],
      "default": "default",
      "appliesClass": "wb-span--{{value}}"
    }
  },
  
  "_metadata": {
    "category": "layout",
    "icon": "üìù",
    "since": "1.0.0",
    "status": "stable",
    "generateAttribute": false
  }
}

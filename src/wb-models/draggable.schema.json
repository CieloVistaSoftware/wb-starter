{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "draggable.schema.json",
  "title": "Draggable",
  "behavior": "draggable",
  "description": "Make an element draggable.",
  "compliance": {
    "baseClass": "wb-draggable",
    "supportLevel": "stable",
    "accessibility": "high"
  },
  "properties": {
    "axis": {
      "type": "string",
      "enum": [
        "x",
        "y",
        "both"
      ],
      "default": "both"
    },
    "handle": {
      "type": "string",
      "description": "Selector for drag handle"
    }
  },
  "$view": [],
  "$methods": {},
  "$cssAPI": {},
  "test": {
    "setup": [
      "<wb-draggable>Basic draggable content</wb-draggable>",
      "<wb-draggable axis=\"x\">axis=x</wb-draggable>",
      "<wb-draggable axis=\"y\">axis=y</wb-draggable>",
      "<wb-draggable axis=\"both\">axis=both</wb-draggable>",
      "<wb-draggable handle=\"Sample handle\">handle=\"Sample handle\"</wb-draggable>"
    ]
  },
  "requirements": [
    {
      "id": "REQ-001",
      "rule": "MUST NOT change element position on initialization",
      "source": "bug:note-1769212201021-p0",
      "testable": true
    },
    {
      "id": "REQ-002",
      "rule": "MUST only apply position:relative when drag starts",
      "source": "bug:note-1769212201021-p0",
      "testable": true
    },
    {
      "id": "REQ-003",
      "rule": "MUST initialize left:0 top:0 when setting position:relative",
      "source": "bug:note-1769212201021-p0",
      "testable": true
    },
    {
      "id": "REQ-004",
      "rule": "MUST preserve existing left/top if already set",
      "source": "inferred",
      "testable": true
    },
    {
      "id": "REQ-005",
      "rule": "MUST constrain to axis when axis property set",
      "source": "schema:properties.axis",
      "testable": true
    },
    {
      "id": "REQ-006",
      "rule": "MUST only drag from handle when handle property set",
      "source": "schema:properties.handle",
      "testable": true
    }
  ],
  "constraints": [
    "Element must be in DOM before inject",
    "Converts position:fixed/absolute to relative"
  ]
}
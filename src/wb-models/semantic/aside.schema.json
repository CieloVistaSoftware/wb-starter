{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "aside.schema.json",
  "title": "Aside Semantic Element",
  "description": "Content tangentially related to main content - sidebars, callouts, notes, notifications.",
  "$inheritance": {
    "extends": "_element.base.schema.json",
    "reason": "Aside IS-A element with all base properties"
  },
  "htmlTag": "aside",
  "role": "complementary",
  "semanticMeaning": {
    "description": "Content indirectly related to main content - could be removed without affecting main flow",
    "examples": [
      "Sidebar",
      "Pull quote",
      "Callout box",
      "Related links",
      "Notification",
      "Alert"
    ],
    "whenToUse": "Supplementary content that enhances but isn't essential"
  },
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Optional title for aside - canvas editable",
      "canvasEditable": true,
      "default": ""
    },
    "content": {
      "type": "string",
      "description": "Main content - ALWAYS canvas editable",
      "canvasEditable": true,
      "default": ""
    },
    "type": {
      "type": "string",
      "description": "Visual variant for notifications/alerts",
      "enum": [
        "default",
        "info",
        "success",
        "warning",
        "error"
      ],
      "default": "default"
    }
  },
  "textProperties": {
    "description": "Canvas-editable text",
    "list": [
      "title",
      "content"
    ]
  },
  "structure": {
    "template": "<aside>\n  {{#title}}<h4>{{title}}</h4>{{/title}}\n  <p>{{content}}</p>\n</aside>"
  },
  "accessibility": {
    "landmarkRole": "complementary",
    "requirements": [
      "Content should make sense on its own",
      "Use aria-label if role needs clarification"
    ]
  },
  "canContain": [
    "*"
  ],
  "wbComponents": {
    "description": "WB components that extend aside",
    "list": [
      "alert",
      "cardnotification",
      "sidebar",
      "drawer",
      "callout",
      "note"
    ]
  },
  "schemaType": "base"
}

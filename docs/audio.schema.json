{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AudioComponent",
  "description": "Schema for the audio component with 15-band EQ and playback controls.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "audio",
      "description": "Component type identifier."
    },
    "src": {
      "type": "string",
      "description": "Audio file source URL or path."
    },
    "eq": {
      "type": "boolean",
      "default": true,
      "description": "Enable the 15-band graphic equalizer UI."
    },
    "volume": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "default": 1,
      "description": "Initial playback volume (0.0 to 1.0)."
    },
    "presets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "values": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 15,
            "maxItems": 15
          }
        },
        "required": ["name", "values"]
      },
      "description": "Custom EQ presets (optional)."
    }
  },
  "required": ["type", "src"],
  "additionalProperties": false
}

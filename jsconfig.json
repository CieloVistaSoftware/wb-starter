{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "baseUrl": ".",
    "checkJs": false,
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  },
  "include": [
    "src/**/*.js",
    "pages/**/*.js",
    "config/**/*.js",
    "tests/**/*.js",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "archive"
  ]
}
